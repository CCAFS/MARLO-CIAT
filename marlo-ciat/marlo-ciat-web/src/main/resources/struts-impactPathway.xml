<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
  <!-- Add addition packages and configuration here. -->
  <package name="impactPathway" namespace="/impactPathway" extends="marlo-default">
    
    <action name="{crp}/outcomes" class="org.cgiar.ccafs.marlo.action.OutcomesAction">
      <interceptor-ref name="impactPathwayStack" />			
      <result name="input">/WEB-INF/views/impactPathway/outcomes.ftl</result>
      <result name="success" type="redirectAction">
        <param name="actionName">${crpSession}/outcomes</param>
        <param name="crpProgramID">${crpProgramID}</param>
        <param name="edit">true</param>
      </result>
      <result name="cancel" type="redirectAction">
        <param name="actionName">${crpSession}/outcomes</param>
        <param name="crpProgramID">${crpProgramID}</param>
        <param name="edit">true</param>
        <param name="cancel">true</param>
      </result>
    </action>    
      
    <action name="{crp}/programImpacts" class="org.cgiar.ccafs.marlo.action.ProgramImpactsAction">
      <interceptor-ref name="impactPathwayStack" />     
      <result name="input">/WEB-INF/views/impactPathway/programImpacts.ftl</result>
      <result name="success" type="redirectAction">
        <param name="actionName">${crpSession}/programImpacts</param>
        <param name="crpProgramID">${crpProgramID}</param>
        <param name="edit">true</param>
      </result>
    </action>
     <action name="{crp}/researchTopics" class="org.cgiar.ccafs.marlo.action.ResearchTopicsAction">
      <interceptor-ref name="impactPathwayStack" />     
      <result name="input">/WEB-INF/views/impactPathway/researchTopics.ftl</result>
      <result name="success" type="redirectAction">
        <param name="actionName">${crpSession}/researchTopics</param>
        <param name="crpProgramID">${crpProgramID}</param>
        <param name="edit">true</param>
      </result>
    </action>
     <action name="{crp}/outputs" class="org.cgiar.ccafs.marlo.action.OutputsAction">
      <interceptor-ref name="impactPathwayStack" />     
      <result name="input">/WEB-INF/views/impactPathway/outputs.ftl</result>
      <result name="success" type="redirectAction">
        <param name="actionName">${crpSession}/outputs</param>
        <param name="crpProgramID">${crpProgramID}</param>
        <param name="edit">true</param>
      </result>
    </action>
    
     <action name="{crp}/submit" class="org.cgiar.ccafs.marlo.action.impactpathway.ImpactSubmissionAction">
      <result name="input">/WEB-INF/views/impactPathway/outcomes.ftl</result>
      <result name="success" type="redirectAction">
        <param name="actionName">${crpSession}/outcomes</param>
        <param name="crpProgramID">${progamID}</param>        
      </result>
    </action>
  </package>
</struts>
